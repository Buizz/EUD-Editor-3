                         Style="{StaticResource MaterialDesignFlatButton}"
                         HorizontalAlignment="Left" Width="20" Height="20" Click="SearchBoxBtnClick">
                    <materialDesign:PackIcon  DockPanel.Dock="Right" Kind="Close" VerticalAlignment="Stretch" Foreground="{DynamicResource MaterialDesignBody}" Margin="-14,0,0,0" />
                </Button>
                <TextBox x:Name="FliterText" Grid.Row="1" 
                  materialDesign:HintAssist.Hint="{StaticResource FliterEnter}"
                  Foreground="{DynamicResource MaterialDesignBody}" TabIndex="1" TextChanged="SearchBoxTextChange"/>
            </DockPanel>
            <Grid>
                <ListBox x:Name="ToolBox" SelectionChanged="ToolBox_SelectionChanged">
                </ListBox>
                <TreeView x:Name="ToolTreeviewBox" SelectedItemChanged="ToolTreeviewBox_SelectedItemChanged" Background="{DynamicResource MaterialDesignPaper}">
                    
