<UserControl x:Class="EditDotData"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EUD_Editor_3"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <ScrollViewer DockPanel.Dock="Top" VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Auto">
            <StackPanel Orientation="Horizontal" x:Name="ColorPallet"/>
        </ScrollViewer>
        <ScrollViewer DockPanel.Dock="Left" VerticalScrollBarVisibility="Auto">
            <WrapPanel x:Name="ImageColors" MaxWidth="128" />
        </ScrollViewer>
        <Image x:Name="Image" RenderOptions.BitmapScalingMode="NearestNeighbor"/>
    </DockPanel>
</UserControl>
