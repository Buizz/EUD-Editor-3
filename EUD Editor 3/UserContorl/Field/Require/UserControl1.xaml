<UserControl x:Class="UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EUD_Editor_3"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ListBox >
            <ListBoxItem Background="#FFD49B9B" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Padding="0" Height="88" Margin="0">
                <DockPanel >
                    <Border x:Name="TopBorder" DockPanel.Dock="Top" Visibility="Hidden" Background="{DynamicResource MaterialDesign.Brush.Primary.Dark}" Height="4"/>
                    <Border x:Name="DownBorder" DockPanel.Dock="Bottom" Visibility="Visible" Background="{DynamicResource MaterialDesign.Brush.Primary.Dark}" Height="4"/>
                    <DockPanel Margin="10">
                        <Border x:Name="IconB" Width="52" Height="52" HorizontalAlignment="Left" VerticalAlignment="Top" Background="Black" >
                            <Image x:Name="Icon" />
                        </Border>

                        <StackPanel>
                            <TextBlock x:Name="Textb" Text="하이" Padding="5"/>
                            <TextBlock x:Name="TextV" Text="하이" Padding="5"/>
                        </StackPanel>

                    </DockPanel>

                </DockPanel>
            </ListBoxItem>
            <ListBoxItem Background="#FFFD6262" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Padding="0,4,0,0" Margin="0,-4,0,0">
                <DockPanel>
                    <Border DockPanel.Dock="Top" Visibility="Visible" Background="#FFFFB900" Height="4"/>
                    <Border DockPanel.Dock="Bottom" Visibility="Hidden" Background="{DynamicResource MaterialDesign.Brush.Primary.Dark}" Height="4"/>
                    <DockPanel Margin="10">
                        <Border Width="52" Height="52" HorizontalAlignment="Left" VerticalAlignment="Top" Background="Black" >
                            <Image />
                        </Border>

                        <StackPanel>
                            <TextBlock Text="하이" Padding="5"/>
                            <TextBlock Text="하이" Padding="5"/>
                        </StackPanel>

                    </DockPanel>

                </DockPanel>
            </ListBoxItem>
            

        </ListBox>

    </Grid>
</UserControl>
