<controls:MetroWindow x:Class="SettingWindows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:dragablz="clr-namespace:Dragablz;assembly=Dragablz"
        xmlns:dockablz="clr-namespace:Dragablz.Dockablz;assembly=Dragablz"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:EUD_Editor_3"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="{StaticResource Setting}" Height="440" Width="650" WindowStartupLocation="CenterScreen" MinWidth="650" MinHeight="440" Topmost="True">

    <Grid>
        <dragablz:TabablzControl x:Name="MainTab"  FixedHeaderCount="5" TabStripPlacement="Left" Background="{DynamicResource MaterialDesignPaper}" >
            <TabItem x:Name="TabItem_ProjectSetting" Header="{StaticResource Project Setting}" >
                <Grid >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="30"/>
                        
                        <RowDefinition Height="30"/>
                        
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="30"/>
                        
                        <RowDefinition Height="30"/>
                        
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="20"/>
                        
                        <RowDefinition Height="30"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="114"/>
                        <ColumnDefinition Width="5"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Row="1" Grid.Column="1" Content="{StaticResource OpenMap}" HorizontalAlignment="Left" VerticalAlignment="Top"  />
                    <TextBox x:Name="TBOpenMap" Grid.Row="2" Grid.Column="1" Margin="10,0"
  materialDesign:TransitionAssist.DisableTransitions="True" IsReadOnly="True"  />

                    <Button Grid.Row="2" Grid.Column="2" Height="26" Content="{StaticResource Find}" VerticalAlignment="Top" Click="BtnOpenMapSet_Click" />

                    <Separator Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Background="#4CA0A0A0"/>

                    <Label Grid.Row="4" Grid.Column="1" Content="{StaticResource SaveMap}" HorizontalAlignment="Left" VerticalAlignment="Top"  />
                    <TextBox  x:Name="TBSaveMap" Grid.Row="5" Grid.Column="1" Margin="10,0"
  materialDesign:TransitionAssist.DisableTransitions="True" IsReadOnly="True" />
                    <Button Grid.Row="5" Grid.Column="2" Height="26" Content="{StaticResource Find}" VerticalAlignment="Top" Click="BtnSaveMapSet_Click" />


                    <Separator Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="2" Background="#4CA0A0A0"/>

                    <Label Grid.Row="7" Grid.Column="1" Content="{StaticResource Setting}" HorizontalAlignment="Left" VerticalAlignment="Top" />
                    <StackPanel Grid.Row="8" Grid.ColumnSpan="2" Grid.RowSpan="2" Grid.Column="1" Orientation="Horizontal">
                        <CheckBox TextBlock.Foreground="{DynamicResource MaterialDesignBody}" Style="{StaticResource MaterialDesignCheckBox}" Grid.Row="6" Grid.Column="1" Content="{StaticResource TBLChange}" Margin="0,0,20,0"/>
                        <CheckBox TextBlock.Foreground="{DynamicResource MaterialDesignBody}" Style="{StaticResource MaterialDesignCheckBox}" Grid.Row="6" Grid.Column="1" Content="{StaticResource chkDataFirst}" Margin="0,0,20,0"/>
                        <CheckBox TextBlock.Foreground="{DynamicResource MaterialDesignBody}" Style="{StaticResource MaterialDesignCheckBox}" Grid.Row="6" Grid.Column="1" Content="{StaticResource AutoCompile}"/>
                    </StackPanel>

                </Grid>
            </TabItem>
            <TabItem Header="{StaticResource Default Setting}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="30"/>
                        
                        <RowDefinition Height="20"/>
                        
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="30"/>
                        
                        <RowDefinition Height="20"/>
                        
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="30"/>
                        
                        <RowDefinition Height="20"/>
                        
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="30"/>
                        
                        <RowDefinition Height="20"/>
                        
                        <RowDefinition Height="25"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="114"/>
                        <ColumnDefinition Width="5"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Row="1" Grid.Column="1" Content="{StaticResource StarExeFile}" HorizontalAlignment="Left" VerticalAlignment="Top" />
                    <TextBox x:Name="TBStarCraftexe" Grid.Row="2" Grid.Column="1" Margin="10,0"
  materialDesign:TransitionAssist.DisableTransitions="True" IsReadOnly="True" />

                    <Button  Grid.Row="2" Grid.Column="2" Height="26" Content="{StaticResource Find}" VerticalAlignment="Top" Click="BtnStarCraftexe" />

                    <Separator Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Background="#4CA0A0A0"/>

                    <Label Grid.Row="4" Grid.Column="1" Content="{StaticResource euddraftExe}" HorizontalAlignment="Left" VerticalAlignment="Top"  />
                    <TextBox x:Name="TBeuddraftexe" Grid.Row="5" Grid.Column="1" Margin="10,0"
  materialDesign:TransitionAssist.DisableTransitions="True" IsReadOnly="True" />
                    <Button Grid.Row="5" Grid.Column="2" Height="26" Content="{StaticResource Find}" VerticalAlignment="Top"  Click="Btneuddraftexe" />

                    <Separator Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="2" Background="#4CA0A0A0"/>

                    <Label Grid.Row="7" Grid.Column="1" Content="{StaticResource Language}" HorizontalAlignment="Left" VerticalAlignment="Top" />
                    <ComboBox x:Name="CBLanguage" Grid.Row="8" Grid.Column="1" Margin="10,0" SelectionChanged="CBLanguage_SelectionChanged" 
                    MinWidth="72"
                    VerticalAlignment="Bottom" Foreground="{DynamicResource MaterialDesignBody}">
                        <ComboBoxItem Content="한국어" Tag="ko-KR"/>
                        <ComboBoxItem Content="English" Tag="us-EN"/>
                    </ComboBox>

                    <Separator Grid.Row="9" Grid.Column="1" Grid.ColumnSpan="2" Background="#4CA0A0A0"/>

                    <Label Grid.Row="10" Grid.Column="1" Content="{StaticResource Theme}" HorizontalAlignment="Left" VerticalAlignment="Top" />
                    <StackPanel  Grid.Row="11" Grid.Column="1" Orientation="Horizontal">
                        <Label  Content="{StaticResource Light}" />
                        <ToggleButton x:Name="ToggleBtn" Checked="ToggleButton_Checked" Unchecked="ToggleButton_Unchecked"
  Style="{StaticResource MaterialDesignSwitchToggleButton}"
  ToolTip="MaterialDesignSwitchToggleButton" HorizontalAlignment="Left" />
                        <Label  Content="{StaticResource Dark}" />
                    </StackPanel>
                                 
                   
                </Grid>
            </TabItem>
            <TabItem Header="{StaticResource DatEdit Setting}" >
                <Grid />
            </TabItem>
            <TabItem Header="{StaticResource TE Setting}" >
                <Grid />
            </TabItem>
            <TabItem Header="{StaticResource Plugin Setting}" >
                <Grid />
            </TabItem>

        </dragablz:TabablzControl>

    </Grid>
</controls:MetroWindow>
