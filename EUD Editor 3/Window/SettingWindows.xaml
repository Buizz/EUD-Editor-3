<Window x:Class="SettingWindows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EUD_Editor_3"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="{StaticResource Setting}" Height="440" Width="650" WindowStartupLocation="CenterScreen" MinWidth="650" MinHeight="440" Topmost="True">

    <Grid>
        <TabControl x:Name="MainTab" TabStripPlacement="Left" >
            <TabItem x:Name="TabItem_ProjectSetting" Header="{StaticResource Project Setting}" Width="150" Height="40" BorderBrush="{x:Null}" Background="White" >
                <Grid >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="100*"/>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="5"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Row="1" Grid.Column="1" Content="{StaticResource OpenMap}" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    <TextBlock x:Name="TBOpenMap" Grid.Row="2" Grid.Column="1">
                        MapPath
                    </TextBlock>
                    <Button Grid.Row="2" Grid.Column="2" Height="26" Content="{StaticResource Find}" VerticalAlignment="Top" Background="#FFF0F0F0" BorderBrush="{x:Null}" Click="BtnOpenMapSet_Click" />

                    <Label Grid.Row="3" Grid.Column="1" Content="{StaticResource SaveMap}" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    <TextBlock x:Name="TBSaveMap" Grid.Row="4" Grid.Column="1">
                        MapPath
                    </TextBlock>
                    <Button Grid.Row="4" Grid.Column="2" Height="26" Content="{StaticResource Find}" VerticalAlignment="Top" Background="#FFF0F0F0" BorderBrush="{x:Null}" Click="BtnSaveMapSet_Click" />

                    <StackPanel Grid.Row="5" Grid.ColumnSpan="2" Grid.RowSpan="2" Grid.Column="1" Orientation="Horizontal">
                        <CheckBox Grid.Row="6" Grid.Column="1" Content="{StaticResource TBLChange}" Margin="0,0,20,0"/>
                        <CheckBox Grid.Row="6" Grid.Column="1" Content="{StaticResource chkDataFirst}" Margin="0,0,20,0"/>
                        <CheckBox  Grid.Row="6" Grid.Column="1" Content="{StaticResource AutoCompile}"/>
                    </StackPanel>

                </Grid>
            </TabItem>
            <TabItem Header="{StaticResource Default Setting}" Width="150" Height="40" BorderBrush="{x:Null}" Background="White" >
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="25"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="100*"/>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="5"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Row="1" Grid.Column="1" Content="{StaticResource StarExeFile}" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    <TextBlock x:Name="TBStarCraftexe" Grid.Row="2" Grid.Column="1">
                        StarCraftPath
                    </TextBlock>
                    <Button  Grid.Row="2" Grid.Column="2" Height="26" Content="{StaticResource Find}" VerticalAlignment="Top" Background="#FFF0F0F0" BorderBrush="{x:Null}" Click="BtnStarCraftexe" />
                    <Label Grid.Row="3" Grid.Column="1" Content="{StaticResource euddraftExe}" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    <TextBlock x:Name="TBeuddraftexe" Grid.Row="4" Grid.Column="1">
                        EuddrfatexePath
                    </TextBlock>
                    <Button Grid.Row="4" Grid.Column="2" Height="26" Content="{StaticResource Find}" VerticalAlignment="Top" Background="#FFF0F0F0" BorderBrush="{x:Null}" Click="Btneuddraftexe" />

                </Grid>
            </TabItem>
            <TabItem Header="{StaticResource DatEdit Setting}" Width="150" Height="40" BorderBrush="{x:Null}" Background="White" >
                <Grid />
            </TabItem>
            <TabItem Header="{StaticResource TE Setting}" Width="150" Height="40" BorderBrush="{x:Null}" Background="White" >
                <Grid />
            </TabItem>
            <TabItem Header="{StaticResource Plugin Setting}" Width="150" Height="40" BorderBrush="{x:Null}" Background="White" >
                <Grid />
            </TabItem>

        </TabControl>

    </Grid>
</Window>
