<controls:MetroWindow x:Class="DataEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:dragablz="clr-namespace:Dragablz;assembly=Dragablz"
        xmlns:dockablz="clr-namespace:Dragablz.Dockablz;assembly=Dragablz"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:EUD_Editor_3"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="DataEditor" Height="620" Width="920" WindowStartupLocation="Manual" Topmost="True">
    <Window.Resources>
        <system:String x:Key="Partition">QuickStart</system:String>
    </Window.Resources>



    <DockPanel>
        <Expander Name="Console" DockPanel.Dock="Bottom" Header="명령창" TextBlock.Foreground="{DynamicResource MaterialDesignBody}">
            <RichTextBox Height="96" >
                <FlowDocument>
                    <Paragraph>
                        <Run Text="RichTextBox"/>
                    </Paragraph>
                </FlowDocument>
            </RichTextBox>
        </Expander>

        <Expander Name="CodeExpander"  ExpandDirection="Right"  DockPanel.Dock="Left">
            <Expander.Header>
                <TextBlock
                    TextBlock.Foreground="{DynamicResource MaterialDesignBody}"
                    Text="코드"
                    RenderTransformOrigin=".5,.5">
                    <TextBlock.LayoutTransform>
                        <RotateTransform
                        Angle="90" />
                    </TextBlock.LayoutTransform>
                </TextBlock>
            </Expander.Header>
            <Grid Width="360">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="0"/>
                    <ColumnDefinition Width="100*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="100*"/>
                    <RowDefinition Height="35 "/>
                    <RowDefinition Height="35"/>
                </Grid.RowDefinitions>
                <ListBox x:Name="CodeIndexerList"  Grid.RowSpan="1" Grid.ColumnSpan="1" Grid.Column="2"/>
                <TreeView x:Name="CodeIndexerTree"  Grid.RowSpan="1" Grid.ColumnSpan="1" Grid.Column="2" Visibility="Hidden">
                    <TreeViewItem Header="Employee1">
                        <TreeViewItem Header="Jesper"/>
                        <TreeViewItem Header="Aaberg"/>
                        <TreeViewItem Header="12345"/>
                    </TreeViewItem>
                    <TreeViewItem Header="Employee2">
                        <TreeViewItem Header="Dominik"/>
                        <TreeViewItem Header="Paiha"/>
                        <TreeViewItem Header="98765"/>
                    </TreeViewItem>
                </TreeView>
                <TextBox Grid.Column="2" Grid.Row="1"
  materialDesign:HintAssist.Hint="필터를 입력하세요."
  Foreground="{DynamicResource MaterialDesignBody}" />

                <ListBox  Grid.RowSpan="3" Foreground="{DynamicResource MaterialDesignBody}" >
                    <ListBoxItem>
                        유닛
                    </ListBoxItem>
                    <ListBoxItem >
                        무기
                    </ListBoxItem>
                    <ListBoxItem>
                        비행정보
                    </ListBoxItem>
                    <ListBoxItem>
                        스프라이트
                    </ListBoxItem>
                    <ListBoxItem>
                        이미지
                    </ListBoxItem>
                    <ListBoxItem>
                        업그레이드
                    </ListBoxItem>
                    <ListBoxItem>
                        기술
                    </ListBoxItem>
                    <ListBoxItem>
                        명령
                    </ListBoxItem>
                    <ListBoxItem>
                        버튼셋
                    </ListBoxItem>
                </ListBox>

                <ToolBarTray Grid.Column="2"  Grid.Row="2" >
                    <ToolBar ToolBarTray.IsLocked="True"
    Style="{DynamicResource MaterialDesignToolBar}" >
                        
                        <Button x:Name="Btnsortn123" Click="Btn_sortn123">
                            <materialDesign:PackIcon Kind="SortNumeric"  Margin="-10" />
                        </Button>
                        <Button x:Name="BtnsortABC" Click="Btn_sortABC">
                                <materialDesign:PackIcon Kind="SortAlphabetical" Margin="-10"/>
                            </Button>
                        <Button x:Name="BtnsortTree" Click="Btn_sortTree">
                            <materialDesign:PackIcon Kind="FileTree"  Margin="-10"/>
                        </Button>
                        <ListBox SelectionMode="Extended">
                            <ListBoxItem>
                                <materialDesign:PackIcon Kind="PencilBox" Margin="-10"/>
                            </ListBoxItem>
                        </ListBox>
                    </ToolBar>
                </ToolBarTray>


                <!--<StackPanel Grid.Column="1"  Grid.Row="2" Orientation="Horizontal" >

                    <CheckBox IsEnabledChanged="Btn_isEdit">
                        수정여부
                    </CheckBox>
                </StackPanel>-->

            </Grid>


        </Expander>

        <dockablz:Layout  Partition="{StaticResource Partition}" Background="{DynamicResource MaterialDesignPaper}">
            <dragablz:TabablzControl>
                <dragablz:TabablzControl.InterTabController>
                    <dragablz:InterTabController Partition="{StaticResource Partition}" />
                </dragablz:TabablzControl.InterTabController>
                <TabItem Header="Tab No. 1" IsSelected="True" >
                    <local:UnitData/>
                </TabItem>
                <TabItem Header="Tab No. 2">
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">We Have Tearable Tabs!</TextBlock>
                </TabItem>
                <TabItem>
                    <!-- with context menu -->
                    <TabItem.Header>
                        <Grid>
                            <Grid.ContextMenu>
                                <ContextMenu>
                                    <!--we'll be in a popup, so give dragablz a hint as to what tab header content needs closing -->
                                    <MenuItem Command="{x:Static dragablz:TabablzControl.CloseItemCommand}"/>
                                </ContextMenu>
                            </Grid.ContextMenu>
                            <TextBlock Foreground="{DynamicResource IdealForegroundColorBrush}">Tab No. 3</TextBlock>
                        </Grid>
                    </TabItem.Header>
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">I feel like an ice cold drink</TextBlock>
                </TabItem>
            </dragablz:TabablzControl>
        </dockablz:Layout>



    </DockPanel>
</controls:MetroWindow>
