function CheckLoadable(){
	var c = 0;
	var p = 0;
	foreach(cp : EUDLoopPlayer("Human",None,None)){
		if(sct.SCACommand[cp] != 0){
			c += sct.SCACommand[cp];
			p = cp;
		}
	}
	if (c == 0){
		return true;
	}else{
	    if (sct.SCAUseUserMessage == 1) {
            f_eprintf("{:c}{:n}\x04의 \x07작업[{}]\x04을 \x17기다리고 있습니다.", p, p, sct.rn[p]);
        }
		return false;
	}
}


